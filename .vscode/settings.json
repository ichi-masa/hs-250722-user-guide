  "[jade]": {
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>?",
  },
  "[css]": {},
  "[scss]": {
    "editor.wordSeparators": "`~!$%^&*()=+[{]}|;:'\",.<>/?",
  },
  "[javascript]": {
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>?",
  },
  "[json]": {},
  "[php]": {
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  },
  "phpcbf.onsave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "never"
  },
